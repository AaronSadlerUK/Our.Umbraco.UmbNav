@foreach (var item in umbNav)
{
    @if (item.ItemType == UmbNavItemType.Label)
    {
        <span class="nav-link">@item.Title</span>
    }
    else
    {
        <a class="nav-link" href="@item.Url()" target="@item.Target">@item.Title</a>
    }
}